

@model ShopApplication.UI.Models.ProductListModel


    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategoryList") <!-- CategoryListViewModel 'i çağırıyoruz. -->
        </div>
  

        <div class="col-md-9">  

            <div class="row">

             @foreach(var product in Model.Products)
             {
                 <partial name="_product" for="@product"/> <!-- Partial (Method gibi bir kullanımı var) -->
             }

            </div>

        

        </div>
    </div>
    
