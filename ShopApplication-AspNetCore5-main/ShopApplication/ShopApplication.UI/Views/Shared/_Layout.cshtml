@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopApplication.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> <!-- Bootstrap implement -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Natural Shop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav mr-auto">

                        @if(User.Identity.IsAuthenticated) // Eğer kullanıcı login işlemini gerçekleştirmiş ise.
                        {
                        

                            if (User.IsInRole("Admin"))
                            {
                                    <li class="nav-item">
                                <a asp-controller="Admin" asp-action="CreateProduct" class="nav-link">Ürün Ekle</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Admin" asp-action="ProductList" class="nav-link">Admin Ürünler</a>
                            </li>
                            <li class="nav-item">
                                 <a asp-controller="Admin" asp-action="CreateCategory" class="nav-link">Kategori Ekle</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Admin" asp-action="CategoryList" class="nav-link">Admin Kategori</a>
                                </li>
                            }
                        }


                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link active">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Shop" asp-action="List" class="nav-link">Ürünler</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Cart" asp-action="Index" class="nav-link">Sepetim</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Cart" asp-action="GetOrders" class="nav-link">Siparişlerim</a>
                        </li>
                        
                    </ul>

                    <ul class="navbar-nav mr-auto">

                        @if(User.Identity.IsAuthenticated) // Eğer kullanıcı login işlemini gerçekleştirmiş ise.
                        {
                            
                            <li>
                                <a class="nav-link">Hoşgeldin @User.Identity.Name!</a>
                            </li>

                            <li class="nav-item">
                            <a asp-controller="Account" asp-action="Logout" class="nav-link">Çıkış Yap</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Login" class="nav-link">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Register" class="nav-link">Kayıt Ol</a>
                            </li>
                        }

                        
                        
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ShopApplication.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Script",false)

    <script src="https://kit.fontawesome.com/211d89328e.js" crossorigin="anonymous"></script> <!-- Font Awesome -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
