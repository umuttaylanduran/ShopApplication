@model CartModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alışveriş Sepetim</h1>

<div class="row mt-5">
    <div class="col-md-8">
        @if (Model.CartItems.Count() <= 0)
        {
            <div class="alert alert-warning">
              Henüz sepetinizde ürün bulunmamaktadır. Hemen alışverişe başlamaya ne dersin?
          </div>  
        }

        
        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Adet</th>
                    <th>Toplam</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                <tr>
                    <td>
                        <img src="~/img/@item.ImageUrl" width="80" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price $</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Quantity*item.Price)) $</td>
                    <td>
                   <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                    <input type="hidden" name="productId" value="@item.ProductId" />
                    <button class="btn btn-danger btn-sm">
                            <i class="fa fa-times fa-fw"></i>
                    </button>
                                    
                    </form>

                        
                    </td>
                </tr>
                }
            </tbody>
        
        </table>
    </div>
     <div class="col-md-4">
        <div class="text-left">
            <h4>Sepet Özeti</h4>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Toplam Tutar</th>
                    <td>@Model.TotalPrice().ToString() TL</td> <!-- "c" -> parasal ifadeler için kullanılan c# terimi -->
                </tr>
                <tr>
                    <th>Kargo Ücreti</th>
                    <td>Ücretsiz</td>
                </tr>
                <tr>
                    <th>Sipariş Tutarı</th>
                    <td>@Model.TotalPrice().ToString() TL</td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a href="/" class="btn btn-success">
                <i class="fa fa-shopping-cart"></i> Alışverişe devam et!
            </a>
            <a href="/checkout" class="btn btn-success">
                Sepeti Onayla <i class="fa fa-arrow-circle-right fa-fw"></i>
            </a>
        </div>
    </div>
</div>

