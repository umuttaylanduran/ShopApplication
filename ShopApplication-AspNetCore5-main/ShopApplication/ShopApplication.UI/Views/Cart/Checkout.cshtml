@model OrderModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ödeme</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayları</h4>
        <form action="/checkout" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.FirstName">İsim</label>
                    <input asp-for="FirstName" value="" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.LastName">Soyisim</label>
                    <input asp-for="@Model.LastName" value="" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address">Adres</label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.City">Şehir</label>
                    <input asp-for="@Model.City" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Phone">Telefon Numarası</label>
                    <input asp-for="@Model.Phone" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Email">Email Adres</label>
                    <input asp-for="@Model.Email" value="" class="form-control" />
                </div>
            </div>
            <hr class="mb-4" />
           @* <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="save-info">
                <label class="custom-control-label" for="save-info">Save this information for next time</label>
            </div>*@
            <hr class="mb-4" />
            <div class="d-block my-3">
                <div class="custom-control custom-radio">
                    <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked="" required="">
                    <label class="custom-control-label" for="credit">Kredi Kartı</label>
                </div>
                @*<div class="custom-control custom-radio">
                    <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" required="">
                    <label class="custom-control-label" for="eft">EFT</label>
                </div>*@
            </div>
            <h4 class="mb-3">Kart Bilgileri</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CardName">Kart Sahibi</label>
                    <input asp-for="@Model.CardName" value="" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CardNumber">Kart Numarası</label>
                    <input asp-for="@Model.CardNumber" value="" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationMonth">Ay</label>
                    <input asp-for="@Model.ExpirationMonth" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationYear">Yıl</label>
                    <input asp-for="@Model.ExpirationYear" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Cvv">CVV</label>
                    <input asp-for="@Model.Cvv" value="" class="form-control" />
                </div>
            </div>
            <hr class="mb-4" />
            <button type="submit" class="btn btn-primary btn-lg btn-block">Siparişi Tamamla</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">

        <h4 class="mb-3">
            <span class="text-muted">Sepetiniz</span>
        </h4>
        <ul class="list-group mb-3">

            @foreach(var item in Model.CartModel.CartItems)
            {
                 <li class="list-group-item d-flex justify-content-between">
                <div>
                    <h6 class="my-0">@item.Name</h6>
                    <small class="text-muted">@item.Quantity tane</small>
                </div>
                <span class="text-muted">@item.Price TL</span>
                </li>
            }

           
            
            <li class="list-group-item d-flex justify-content-between">
                <span>Total (TL)</span>
                <strong>@Model.CartModel.TotalPrice() TL</strong>
            </li>
        </ul>

    </div>
</div>

